<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="monolith52.bookminer.MainController">
	<top>
		<MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="File">
					<items>
                  <MenuItem fx:id="startMenuItem" mnemonicParsing="false" onAction="#onStartMenuItemAction" text="Start" />
						<MenuItem fx:id="exitMenuItem" mnemonicParsing="false" onAction="#onExitMenuItemAction" text="Exit" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
	<center>
		<ScrollPane fx:id="scrollPane" prefHeight="800.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="bookPaneHolder" prefWidth="400.0" />
         </content>
		</ScrollPane>
	</center>
</BorderPane>
